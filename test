	#UserPassword = str(input("Введите пароль: "))

	UserHost = 	"www.zzz.com.ua"
	UserName = "artyom@sm4pl.zzz.com.ua"
	UserPassword = "Qwerty123456"

	Name = "data.json"
	KEYDict = "source path"

	client = copyFTP(Name, KEYDict, UserHost, UserName, UserPassword)
